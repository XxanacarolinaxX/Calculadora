<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:hint="0"/>

    <TextView
        android:id="@+id/Text_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:hint="0"
        android:maxLines="1"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/limpar"
            style="@style/operators_Button"
            android:text="C"
            android:clickable="true"/>

        <TextView
            android:id="@+id/divisao"
            style="@style/operators_Button"
            android:text="/"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numero_sete"
            style="@style/numbers_Button"
            android:text="7"
            android:clickable="true"/>

        <TextView
            android:id="@+id/numero_oito"
            style="@style/numbers_Button"
            android:text="8"
            android:clickable="true"/>

        <TextView
            android:id="@+id/numero_nove"
            style="@style/numbers_Button"
            android:text="9"
            android:clickable="true"/>

        <TextView
            android:id="@+id/multiplicacao"
            style="@style/operators_Button"
            android:text="X"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numero_quatro"
            style="@style/numbers_Button"
            android:text="4"
            android:clickable="true"/>

        <TextView
            android:id="@+id/numero_cinco"
            style="@style/numbers_Button"
            android:text="5"
            android:clickable="true"/>

        <TextView
            android:id="@+id/numero_seis"
            style="@style/numbers_Button"
            android:text="9"
            android:clickable="true"/>

        <TextView
            android:id="@+id/menos"
            style="@style/operators_Button"
            android:text="-"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numero_um"
            style="@style/numbers_Button"
            android:text="1"
            android:clickable="true"/>

        <TextView
            android:id="@+id/numero_dois"
            style="@style/numbers_Button"
            android:text="2"
            android:clickable="true"/>

        <TextView
            android:id="@+id/numero_tres"
            style="@style/numbers_Button"
            android:text="3"
            android:clickable="true"/>

        <TextView
            android:id="@+id/mais"
            style="@style/operators_Button"
            android:text="+"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ponto"
            style="@style/numbers_Button"
            android:text="."
            android:clickable="true"/>

        <TextView
            android:id="@+id/numero_zero"
            style="@style/numbers_Button"
            android:text="0"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/apagar"
            style="@style/numbers_Button"
            android:scaleType="center"
            android:src="@drawable/baseline_backspace_24"
            android:text="apagar"
            android:contentDescription="apagar"
            android:clickable="true"/>

        <TextView
            android:id="@+id/igual"
            style="@style/operators_Button"
            android:text="="
            android:clickable="true"/>

    </LinearLayout>


</LinearLayout>

